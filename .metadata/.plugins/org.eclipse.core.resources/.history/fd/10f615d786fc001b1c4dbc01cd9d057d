package exerciciosJava0208;
import javax.swing.JOptionPane;
public class exercicio03 {

	public static void main(String[] args) {
/*programa que calcule a média de salários de uma empresa, pedindo ao usuário
*a grade de funcionários e os salários, e devolvendo a média salarial.*/
		
		int salarios[] = new int [20];
		int i =0;
		double soma = 0;
		
		for (i = 0; i < salarios.length; i++) {
			salarios[i] =Integer.parseInt(JOptionPane.showInputDialog("Digite o salário do " + i + " funcionário."));
			
			switch (salarios[i]) {
			case 0: JOptionPane.showMessageDialog(null,"Coloque um salário.");
			break;
			case A: JOptionPane.showMessageDialog(null,"OPÇÃO INVÁLIDA" , "ERRO" , JOptionPane.ERROR_MESSAGE);
			break;
			
			}
			soma = salarios[i] + soma;
		}
		double media = soma / salarios.length;
		JOptionPane.showMessageDialog(null,"A média salarial da empresa é: R$" + media);
		
	}

}


