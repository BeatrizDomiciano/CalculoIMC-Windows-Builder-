package exerciciosJava0208;
import javax.swing.JOptionPane;
public class exercicio01 {

	public static void main(String[] args) {
/*programa que, com base em uma temperatura em graus celsius, 
*a converta e exiba em Kelvin (K), Réaumur (Re), Rankine (Ra) e Fahrenheit (F).*/
		
		double tempC= Integer.parseInt(JOptionPane.showInputDialog("Quantos graus celsius está fazendo ai?"));
		
		
		double tempK= tempC + 273.15;
		double tempRe= tempC * 0.8 ;
		double tempRa= tempC * 1.8 + 32 + 459.67;
		double tempF= tempC * 1.8 + 32;
		
		JOptionPane.showMessageDialog(null, "Em Kelvin a temperatura é: " + tempK + "K \n"
				+ "Em Réaumur a temperatura é: " + tempRe + "°Re \n"
				+ "Em Rankine a temperatura é: " + tempRa + "°Ra \n"
				+ "Em Fahrenheit a temperatura é: " + tempF + "°F");
	}

}



